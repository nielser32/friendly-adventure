generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RelationshipType {
  relates_to
  supports
  contradicts
  derives_from
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  createdAt DateTime @default(now())

  concepts      Concept[]
  relationships Relationship[]
}

model Concept {
  id          String              @id @default(uuid()) @db.Uuid
  title       String   @unique
  summary     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String   @db.Uuid

  createdBy      User          @relation(fields: [createdById], references: [id], onDelete: Cascade)
  outgoingLinks  Relationship[] @relation("SourceConcept")
  incomingLinks  Relationship[] @relation("TargetConcept")
  tags           ConceptTag[]
}

model Relationship {
  id          String            @id @default(uuid()) @db.Uuid
  type        RelationshipType
  description String?           @db.Text
  createdAt   DateTime          @default(now())
  createdById String            @db.Uuid
  sourceId    String            @db.Uuid
  targetId    String            @db.Uuid

  createdBy User    @relation(fields: [createdById], references: [id], onDelete: Cascade)
  source    Concept @relation("SourceConcept", fields: [sourceId], references: [id], onDelete: Cascade)
  target    Concept @relation("TargetConcept", fields: [targetId], references: [id], onDelete: Cascade)

  @@index([type])
  @@index([sourceId])
  @@index([targetId])
}

model Tag {
  id        String      @id @default(uuid()) @db.Uuid
  label     String      @unique
  createdAt DateTime    @default(now())
  concepts  ConceptTag[]
}

model ConceptTag {
  conceptId String @db.Uuid
  tagId     String @db.Uuid

  concept Concept @relation(fields: [conceptId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([conceptId, tagId])
}
